<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <TableRow android:id="@+id/HA_T_row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cell_outline">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/cell_animal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/dog2"
                    android:gravity="left"
                    android:layout_margin="10dp"/>
                <Button
                    android:id="@+id/animalButton1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Zeus" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/cell_shape">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Vacina 1"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:backgroundTint="@color/colorPet"/>
                <TextView
                    android:id="@+id/textViewOrange1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Vacina 2"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"/>
            </LinearLayout>


        </TableRow>


        <TableRow android:id="@+id/HA_T_row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cell_outline">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:background="@drawable/cell_animal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/dog3"
                    android:gravity="left"
                    android:layout_margin="10dp"/>
                <Button
                    android:id="@+id/animalButton2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Kika" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/cell_shape">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Droga 1"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:backgroundTint="@color/colorPet"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Droga 2"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:backgroundTint="@color/colorPet"/>
                <TextView
                    android:id="@+id/textViewOrange2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Droga 3"
                    android:background="@drawable/cell_shape"
                    android:gravity="center"
                    android:backgroundTint="@color/colorOrange"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_hora"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="260dp" />
</RelativeLayout>
