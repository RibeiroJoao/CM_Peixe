<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.petuniversal.joaoribeiro.petuniversal.ListClinicsActivity"
    android:orientation="vertical"
    android:id="@+id/listclinics_form">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:layout_marginTop="18dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/hosp_vet_generico"
                android:layout_gravity="left"
                android:id="@+id/imageView_List"/>
            <Button android:id="@+id/buttonClinic"
                style="?android:attr/borderlessButtonStyle"
                android:text="Button1"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="right" />
    </LinearLayout>

</LinearLayout>
